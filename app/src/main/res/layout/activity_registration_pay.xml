                            <Button
                                android:id="@+id/btn_apply_promo_reg_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:elevation="2dp"
                                android:fontFamily="@font/futurapt_medium"
                                android:text="Apply"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/promoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp"
                        android:text="Applied"
                        android:textColor="#2D796D"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/gastos"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                      


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/card_promo" />
            </LinearLayout>

