                <TextView
                    android:id="@+id/tV_select_upi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/futurapt_medium"
                    android:text="Select UPI Method"
                    android:textColor="@color/gastos_green"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_phonepe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tV_select_upi">

                    <androidx.constraintlayout.widget.ConstraintLayout
