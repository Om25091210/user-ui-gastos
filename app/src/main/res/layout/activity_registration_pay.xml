                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#65C466"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintRight_toRightOf="@+id/card_phonepe"
                    app:layout_constraintTop_toBottomOf="@id/tV_select_upi">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_white">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_paytm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintLeft_toRightOf="@id/card_phonepe"
                    app:layout_constraintTop_toBottomOf="@+id/tV_select_upi">

                    <androidx.constraintlayout.widget.ConstraintLayout
