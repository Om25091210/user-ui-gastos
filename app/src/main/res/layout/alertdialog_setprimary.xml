<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_primary_back"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/qrItemImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/googlepay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/primary"
            app:layout_constraintEnd_toEndOf="@+id/qrItemImage"
            app:layout_constraintHorizontal_bias="0.227"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:gravity="center_horizontal"
        android:textColor="#4F4F4F"
        android:text="youâ€™ll be receiving all of\n your payments on the bank\n account linked with this\n QR."
        android:textSize="18sp" />
    <!--todo need changes in ui-->

    <androidx.cardview.widget.CardView
        android:id="@+id/set_primary"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/dimen_24dp"
        app:cardBackgroundColor="@color/gastos"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:focusable="true">

        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="50dp"
            android:fontFamily="@font/roboto"
            android:text="Set Primary"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
