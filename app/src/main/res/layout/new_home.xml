<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shopImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/image"
            android:src="@drawable/recback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dim_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/dim_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/newhomebackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/plusjakartatextregular"
                        android:text="@string/cafe_Bistro"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_20dp"
                                android:src="@drawable/recthelper"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/textView13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/plusjakartatextregular"
                                android:text="4.3"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                                app:layout_constraintStart_toStartOf="@+id/imageView6"
                                app:layout_constraintTop_toTopOf="@+id/imageView6" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/plusjakartatextregular"
                                android:text="@string/rate"
                                android:textColor="@color/greyDark"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                                app:layout_constraintStart_toEndOf="@+id/imageView6"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/marketMembership"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/darkGreen"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="@dimen/dimen_0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/textView14"
                        app:layout_constraintStart_toStartOf="@id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/imageView6">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:layout_margin="12dp"
                                android:src="@drawable/gpng"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                 />

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="20dp"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/plusjakartatextregular"
                                android:text="@string/martketplace_Membership"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.777" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                android:src="@drawable/gicon" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <LinearLayout
                                android:layout_marginStart="@dimen/dimen_20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView

                                    android:id="@+id/manageQr"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/barcode"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_scan_barcode" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/manageQr"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/providerWallet"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/wallet"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/image"
                                        android:src="@drawable/ic_wallet_2" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/pWallet"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/posQr"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/nBarcode"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/image"
                                        android:src="@drawable/ic_pos_scan" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/posQr"
                                    android:textColor="@color/text" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginEnd="@dimen/dimen_20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/pay_received"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/pay_received"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_pay_received" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/received_payments"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <LinearLayout
                                android:layout_marginStart="@dimen/dimen_20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView

                                    android:id="@+id/my_des"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/barcode"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_my_des" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/my_ndesigns"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/my_pro"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/my_pro"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_my_pro" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/my_npromotions"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/my_discount"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/my_dis"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/image"
                                        android:src="@drawable/ic_my_dis" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/my_ndiscount"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginEnd="@dimen/dimen_20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/settings"
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    android:layout_marginStart="@dimen/dimen_20dp"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_marginEnd="@dimen/dimen_20dp"
                                    android:layout_marginBottom="5dp"
                                    android:backgroundTint="@color/setting"
                                    app:cardCornerRadius="@dimen/dimen_15dp"

                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_setting" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:gravity="center"
                                    android:text="@string/settings"
                                    android:textColor="@color/text" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:theme="@style/Theme.MaterialComponents.DayNight"
                            android:layout_margin="@dimen/dimen_20dp"
                            app:cardCornerRadius="25dp"
                            android:layout_height="140dp"
                            app:strokeWidth="0.5dp"
                            app:strokeColor="@color/strokeColor"
                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/double_dhamaka"
                                android:layout_width="match_parent"
                                android:background="@color/white"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:text="@string/dhamaka"
                                    android:textColor="@color/darkBlack"
                                    android:textSize="15sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:text="@string/avail"
                                    android:textColor="@color/avail"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView15"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="@dimen/dimen_20dp"
                                    android:fontFamily="@font/plusjakartatextregular"
                                    android:text="@string/checkOut"
                                    android:textColor="@color/gr"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="150dp"
                                    android:layout_height="70dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="@dimen/dimen_0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="1.0">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"
                                        android:contentDescription="@string/image"
                                        android:src="@drawable/india" />
                                </com.google.android.material.card.MaterialCardView>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="@dimen/dimen_20dp"
                        android:id="@+id/load_payments"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/strokeone"
                       >
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Load Payments"
                            android:textColor="#10B981"
                            android:textSize="15dp"
                            android:fontFamily="@font/plusjakartatextregular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="380dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="28dp"
                            android:visibility="visible"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.483"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardView5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ads_image_home"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
