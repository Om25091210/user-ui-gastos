<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".registration.setpin">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <TextView
             android:id="@+id/set_your_pin2"
             android:layout_width="347dp"
             android:layout_height="45dp"
             android:layout_alignParentStart="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_alignParentEnd="true"
             android:layout_marginStart="32dp"
             android:layout_marginLeft="32dp"
             android:layout_marginTop="161dp"
             android:layout_marginEnd="32dp"
             android:fontFamily="@font/futurapt_demi"
             android:gravity="center"
             android:maxLines="1"
             android:text="@string/create_pin"
             android:textColor="#004445"
             android:textSize="18sp" />

         <View
             android:id="@+id/layer_3"
             android:layout_width="198dp"
             android:layout_height="242dp"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:background="@drawable/hweb" />

         <TextView
             android:id="@+id/set_your_pin"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_alignParentEnd="true"
             android:layout_marginStart="70dp"
             android:layout_marginLeft="70dp"
             android:layout_marginTop="27dp"
             android:layout_marginEnd="70dp"
             android:fontFamily="@font/futurapt_demi"
             android:gravity="center"
             android:maxLines="1"
             android:text="@string/set_your_4_digit_pin"
             android:textColor="#004445"
             android:textSize="25sp" />

         <EditText
             android:id="@+id/enterPin"
             android:layout_width="345dp"
             android:layout_height="64dp"
             android:layout_below="@+id/set_your_pin2"
             android:layout_alignParentStart="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_marginStart="25dp"
             android:layout_marginLeft="25dp"
             android:layout_marginTop="45dp"
             android:layout_marginEnd="30dp"
             android:layout_marginRight="30dp"
             android:background="@drawable/border_rect"
             android:elevation="5dp"
             android:fontFamily="@font/futurapt_medium"
             android:hint="@string/new_pin"
             android:inputType="numberPassword"
             android:maxLength="4"
             android:padding="10dp"
             android:paddingLeft="15dp"
             android:textColor="@color/black"
             android:textColorHint="#818181"
             android:textSize="18sp" />

         <EditText
             android:id="@+id/renterPin"
             android:layout_width="345dp"
             android:layout_height="64dp"
             android:layout_below="@+id/enterPin"
             android:layout_alignParentStart="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_marginStart="25dp"
             android:layout_marginLeft="25dp"
             android:layout_marginTop="20dp"
             android:layout_marginEnd="30dp"
             android:layout_marginRight="30dp"
             android:background="@drawable/border_rect"
             android:elevation="5dp"
             android:fontFamily="@font/futurapt_medium"
             android:hint="@string/renew_pin"
             android:inputType="numberPassword"
             android:maxLength="4"
             android:padding="15dp"
             android:paddingLeft="15dp"
             android:textColor="@color/black"
             android:textColorHint="#818181"
             android:textSize="18sp" />

         <androidx.cardview.widget.CardView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentRight="true"
             android:layout_alignParentBottom="true"
             android:layout_marginEnd="25dp"
             android:layout_marginRight="25dp"
             android:layout_marginBottom="40dp"
             android:elevation="16dp"
             app:cardCornerRadius="30dp"
             app:cardElevation="10dp">

             <Button
                 android:id="@+id/setBtn"
                 android:layout_width="55dp"
                 android:layout_height="55dp"
                 android:background="@drawable/pageforward"
                 android:contentDescription="@string/todo" />
         </androidx.cardview.widget.CardView>


         <ImageView
             android:id="@+id/prev"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:layout_marginTop="25dp"
             android:padding="10dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:srcCompat="@drawable/ic_back" />
     </RelativeLayout>
    </ScrollView>


</RelativeLayout>
